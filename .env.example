# === LLM Provider ===
# Options: "openai", "google", "vllm"
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini
GOOGLE_API_KEY=your-google-key-here
GOOGLE_MODEL=gemini-2.0-flash

# vLLM (local)
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_MODEL=meta-llama/Llama-3.1-8B-Instruct

# === SafeLine WAF ===
SAFELINE_URL=https://localhost:9443
SAFELINE_API_TOKEN=your-safeline-api-token
# Get token: SafeLine UI → System Management → API Token
SAFELINE_VERIFY_TLS=true
# Optional custom CA bundle path for SafeLine cert verification
SAFELINE_CA_BUNDLE=
SAFELINE_TIMEOUT=10
SAFELINE_RETRIES=2

# === Pet Shop ===
PETSHOP_HOST=0.0.0.0
PETSHOP_PORT=8080

# === RAG ===
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# === Logging ===
LOG_LEVEL=INFO
SAFELINE_LOG_DIR=./data/logs
GUARDRAIL_AUDIT_ENABLED=true
GUARDRAIL_AUDIT_PATH=./data/logs/guardrails.json
